{
    "compilerOptions": {
        "target": "es6",
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "./",
        "removeComments": true,
        "strict": true, 
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "sourceRoot": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
} 